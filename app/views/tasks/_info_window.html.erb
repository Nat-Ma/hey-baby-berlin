<div id="<%= hospital.id %>" class="hide hospital-details" data-controller="details">
  <div class="d-flex justify-content-end" data-action="click->details#hideInfoWindow" ><i class="fa-solid fa-xmark"></i></div>
  <div class="d-flex">
    <div class="me-2 hospital-circle">●</div>
    <div class="mt-1">
      <h5><%= hospital.name  %></h5>
      <p><%= hospital.address  %></p>
    </div>
  </div>
  <p><%= link_to("book an appointment", "http://#{hospital.website}", target: "blank", class: "button-secondary") %></p>
</div>
