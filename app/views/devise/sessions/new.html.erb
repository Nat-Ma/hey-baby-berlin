<div class="onboarding onboarding-text" style="background-image: url('<%= asset_url('login_onboarding.png') %>');">
  <div class="logo-text-sign">
    <p>HEY BABY</p>
  </div>

  <div class="onboarding-content signup">
    <div>
      <h1>Log in</h1>
    </div>

    <div class="pregnancy-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>

        <div class="form-inputs black-label">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

      <div class="button-bottom">
          <%= f.button :submit, "Log in", class: 'signup-button'  %>
      <% end %>
      </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
