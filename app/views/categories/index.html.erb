<div class="container">
  <h1>Categories</h1>
  <% @categories.each do |category| %>
    <div class="card card-category">
      <div class="title">
        <i class="fa-solid fa-layer-group"></i>
        <h4><%= category.name %></h4>
      </div>
      <%# if statement %>
      <div class="details">

        <i class="fa-solid fa-angle-right"></i>
      </div>
    </div>
  <% end %>
</div>
