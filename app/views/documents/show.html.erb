<%= render "shared/navbar" %>
  <div class="container">
    <h1><%= @category.name %></h1>
    <%= link_to "add document", new_category_document_path(@category) %>
    <% #button to upload file %>
        <% if !@category.documents.empty? %>
        <p>Your Documents</p>
        <div class="files-container">
          <% @category.documents.each do |document| %>
            <% document.photos.each do |photo| %>
              <div class="file-card">
                <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
                <div>
                  <p><%= document.name %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <% else %>
          <p>You haven't uploaded any documents yet</p>
        <% end %>
  </div>
<%= render "shared/navbar_bottom" %>
