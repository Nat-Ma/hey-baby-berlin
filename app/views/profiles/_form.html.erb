<%= simple_form_for @profile do |f| %>
  <%= f.input :first_name, label: false, placeholder: "First name" %>
  <%= f.input :last_name, label: false, placeholder: "Last name" %>
  <%= f.input :address, label: false,
              input_html: {data: {address_autocomplete_target: "address"}, class: "form-control d-none"},
              wrapper_html: {data: {
              controller: "address-autocomplete",
              address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}, class: "form-control"} %>
  <%= f.input :birthdate, as: :string, input_html: {type: :date}, start_year: Date.today.year - 50,
                            end_year: Date.today.year - 12,
                            order: [:day, :month, :year], placeholder: "Birthdate" %>
  <%= f.input :role, collection: Profile::ROLES, label: false, placeholder: "Role" %>
  <%= f.button :submit, "Next", class: 'signup-button' %>
<% end %>
