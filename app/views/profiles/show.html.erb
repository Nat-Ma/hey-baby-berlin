<%= render "shared/navbar" %>
<div class="onboarding signup" style="background-image: url('<%= asset_url('profile_onboarding.png') %>');">
  <div class="container">
    <div>
      <%# <h5 style="text-align:center;" class="mb-4">HEY BABY</h5> %>

      <h1 style="text-align:center;" class="mb-4">My Profile</h1>

      <div>
        <h5>Name:</h5>
          <p><%= @profile.first_name %> <%= @profile.last_name %></p>
        <h5>Address:</h5>
          <p><%= @profile.address %></p>
        <h5>Birthdate:</h5>
          <p><%= @profile.birthdate.strftime("%d. %m. %Y") %></p>
        <h5>Your due date</h5>
          <p><%= current_user.pregnancies.last.due_date.strftime("%d. %m. %Y") %></p>
        <h5>Weeks of pregnancy</h5>
          <p><%= current_user.pregnancies.last.week_of_pregnancy %></p>
      </div>

      <button type="button" class="button-main d-block" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Edit due date
      </button>

    </div>
  </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div class="d-flex justify-content-end" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"><i class="fa-solid fa-xmark"></i></div>
        <h5 class="modal-title" id="exampleModalLabel">Edit due date</h5>
      </div>
      <div class="modal-body">
        <div class="form-control d-non">
          <%= simple_form_for [current_user.pregnancies.last] do |f| %>
            <%= f.input :due_date, as: :date, html5: true %>
        </div>
        <div class="button-bottom">
            <%= f.button :submit, "Update", class: 'signup-button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/navbar_bottom" %>
