<div class="container onboarding onboarding-text" style="background-image: url('<%= asset_url('pregnancy_onboarding.png') %>');">
  <h2 style=color:white ><%= t "devise.invitations.new.header" %></h2>

  <div class="pregnancy-form">
    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-inputs">
          <%= f.input field %>
        </div>
      <% end -%>

      <div class="form-actions">
        <%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'signup-button' %>
      </div>
    <% end %>
  </div>
</div>
